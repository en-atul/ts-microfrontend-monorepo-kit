{
	"compilerOptions": {
		"target": "ES6",
		"module": "esnext",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"*"
			]
		},
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": true,
		"composite": true
	},
	"include": [
		"packages/**/*",
		"apps/**/*"
	],
	"exclude": [
		"**/node_modules/**",
		"**/dist/**"
	]
}
