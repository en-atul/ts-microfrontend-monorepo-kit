{
	"name": "@repo/dev-cli",
	"version": "1.0.0",
	"description": "CLI tool for development workflow",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"dev-cli": "./bin/run"
	},
	"scripts": {
		"build": "tsc -b",
		"lint": "eslint .",
		"postpack": "rm -f oclif.manifest.json",
		"prepack": "rm -rf dist && tsc -b && oclif manifest && oclif readme",
		"test": "echo \"Error: no test specified\" && exit 1",
		"version": "oclif readme && git add README.md"
	},
	"keywords": [
		"cli",
		"development",
		"tools"
	],
	"author": "atul",
	"license": "MIT",
	"devDependencies": {
		"@oclif/core": "^4.3.0",
		"@types/node": "^22.15.18",
		"typescript": "^5.8.3",
		"ts-node": "^10.9.2"
	},
	"files": [
		"/bin",
		"/dist",
		"/npm-shrinkwrap.json",
		"/oclif.manifest.json"
	],
	"oclif": {
		"bin": "dev-cli",
		"dirname": "dev-cli",
		"commands": "./dist/commands",
		"plugins": [
			"@oclif/plugin-help"
		]
	}
}
